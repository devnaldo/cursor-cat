{
  "manifest_version": 3,
  "name": "Cursor Cat",
  "version": "1.0",
  "description": "A cute pixel art cat that follows your cursor and shows adorable idle animations",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/*.png", "images/*.gif"],
      "matches": ["<all_urls>"]
    }
  ],
  "default_icon": "icon.png"
}